<UserControl x:Class="Mobile_Petitions.Views.SignatureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400">
    
    
    <Grid Background="Black">
        
        <TextBox Margin="15,365,15,130"/>

        <Button Command="{Binding ChangeToScan}" 
                Content="Submit Signature" 
                Margin="66,505,66,54" 
                Style="{StaticResource ButtonStyleDark}"
                Effect="{StaticResource ResourceKey=dropShadow}"/>

        <Image x:Name="Thumbprint_jpg" 
               Margin="66,83,89,347" 
               Stretch="Fill" 
               Opacity="0.65" 
               Source="/Mobile_Petitions;component/Thumbprint.jpg"/>
        
        <Label x:Name="lblEscan" 
               Content="eScan" 
               HorizontalAlignment="Left" 
               Height="92" 
               Margin="96,28,0,0" 
               VerticalAlignment="Top" 
               Width="206" 
               Foreground="White" 
               FontSize="72" 
               FontFamily="Bauhaus 93"/>
        
        <Label x:Name="label2" 
               Content="PETITIONS"
               Margin="213,113,0,0"
               Style="{StaticResource LabelLight}"
               FontSize="20" 
               VerticalContentAlignment="Center" 
               HorizontalContentAlignment="Center"/>
        
        <Image x:Name="imgSignature" 
               HorizontalAlignment="Left" 
               Height="95" Margin="32,370,0,0" 
               VerticalAlignment="Top" 
               Width="340" 
               Source="/Mobile_Petitions;component/JustinElder-Sig.tif" 
               Visibility="Hidden"/>
        
        <Button x:Name="btnSign" 
                Content="Sign Petition" 
                HorizontalAlignment="Left" 
                Margin="151,303,0,0" 
                VerticalAlignment="Top" 
                Width="106" 
                Background="Black" 
                BorderBrush="White" 
                Foreground="White"
                BorderThickness="2,1,1,2" 
                Height="30" 
                Click="btnSign_Click"/>
        
        <Label x:Name="label" 
               Content="|"
               Margin="321,5,0,0" 
               Style="{StaticResource LabelDark}"/>
        
        <Label x:Name="lblExit" 
               Content="Exit" 
               Margin="282,4,0,0"
               FontSize="16"
               Style="{StaticResource LabelDark}"
               MouseEnter="lblExit_MouseEnter" 
               MouseLeave="lblExit_MouseLeave" 
               MouseLeftButtonDown="lblExit_MouseLeftButtonDown"/>

        <Button x:Name="btnSignOut" 
                Command="{Binding ChangeToScan}" 
                Content="SignOut"
                Margin="333,8,0,0"
                Click="btnSignOut_Click"
                Style="{StaticResource TextButtonDark}"/>
    </Grid>
</UserControl>
